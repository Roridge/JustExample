package com.flowmellow.justexample.activities.test;

import android.test.ActivityInstrumentationTestCase2;
import android.test.UiThreadTest;
import android.widget.EditText;
import android.widget.ImageButton;

import com.flowmellow.justexample.R;
import com.flowmellow.justexample.activities.JustMainActivity;

public class JustMainActivityNavigationTest extends ActivityInstrumentationTestCase2<JustMainActivity> {

	private JustMainActivity activity;

	public JustMainActivityNavigationTest() {
		super(JustMainActivity.class);
	}

	@Override
	protected void setUp() throws Exception {
		super.setUp();
		activity = getActivity();

	}

	@UiThreadTest
	public void testRestaurantsActivityIsStartedWithPostcode() {
		
		final EditText searchEditText = (EditText) activity.findViewById(R.id.searchEditText);
		searchEditText.setText("WD6 1JN");
		
		final ImageButton searchImageButton = (ImageButton) activity.findViewById(R.id.searchImageButton);
		assertTrue("the search button was not clicked", searchImageButton.performClick());
		
	}
}
