package com.flowmellow.justexample.activities.adapters;

import java.util.Collections;
import java.util.LinkedHashMap;
import java.util.Map;

import android.graphics.Bitmap;

public class ImageCache {

	private Map<String, Bitmap> cache = Collections.synchronizedMap(new LinkedHashMap<String, Bitmap>(10, 1.5f, true));
	private long CACHE_SIZE_ALLOCATION = 0L;// current allocated size
	private final long cacheLimit;
	
	ImageCache() {
		//20% of the max memory
		cacheLimit = (Runtime.getRuntime().maxMemory() / 5);
	}
	
	
	public Bitmap getImage(String url) {
		
		Bitmap image = null;
		
		if(cache.containsKey(url)) {
			image = cache.get(url);
		}
		
		return image;
	}

	public void putImage(ImageLoaderQueueItem queueItem, Bitmap bitmap) {
		// TODO Auto-generated method stub

	}

	public void clear() {
		// TODO Auto-generated method stub

	}

}
