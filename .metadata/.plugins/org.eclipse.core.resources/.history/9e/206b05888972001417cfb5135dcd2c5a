package com.flowmellow.justexample;

import java.util.ArrayList;
import java.util.List;

import com.flowmellow.justexample.activities.to.RestaurantTO;

public class RestaurantUtil {

	public static final String POSTCODE = "WD6 1JN";

	public static List<RestaurantTO> getMockRestaurants() {
		/*
		 * When sorted in order of star rating the order will be
		 * 0,1,2,3,4,5,6,7. where zero is highest so should apear at the top of
		 * the screen.
		 */
		List<RestaurantTO> restaurants = new ArrayList<RestaurantTO>();
		restaurants.add(new RestaurantTO("7", "Restaurant1", 0.5F));
		restaurants.add(new RestaurantTO("1", "Restaurant2", 4.5F));
		restaurants.add(new RestaurantTO("0", "Restaurant3", 5.5F));
		restaurants.add(new RestaurantTO("4", "Restaurant4", 2.5F));
		restaurants.add(new RestaurantTO("2", "Restaurant5", 4.0F));
		restaurants.add(new RestaurantTO("5", "Restaurant6", 1.0F));
		restaurants.add(new RestaurantTO("5", "Restaurant7", 2.0F));
		restaurants.add(new RestaurantTO("3", "Restaurant8", 3.0F));
		return restaurants;
	}
}
